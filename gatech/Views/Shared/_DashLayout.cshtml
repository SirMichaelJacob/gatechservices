
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Open+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
    <style>
        body {
            background-color: #f5f8fa;
        }

        .navbar {
            background-color: #28a745;
        }

        .navbar-brand {
            color: #fff;
        }

        .navbar-text {
            color: #fff;
        }

        .sidebar {
            background-color: #f8f9fa;
        }

            .sidebar .nav-link {
                color: #6c757d;
            }

                .sidebar .nav-link:hover, .sidebar .nav-link.active {
                    background-color: #e2e6ea;
                    color: #000;
                }

        .card {
            margin-bottom: 20px;
        }

        .footer {
            background-color: #343a40;
            color: #f8f9fa;
            padding: 10px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container-xxl bg-white p-0">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a href="." class="navbar-brand p-0">

                    <h1 class="m-0"><i class="fa fa-globe me-3 text-white"></i>G.A Tech </h1>
                    @*<img src="~/img/logo.png" alt="Logo">*@
                </a>
                <a class="navbar-brand" href="#">Admin Dashboard</a>
                <div class="ml-auto ">
                    @*<i class="fas fa-user rounded-circle"> </i>*@
                    <img src="~/img/user.png" alt="User Avatar" class="rounded-circle bg-white" width="40">
                    @if (User.Identity.IsAuthenticated)
                    {
                        @Html.ActionLink(" Logout", "Logout", "Dashboard",new { }, new { @class = "text-white" })
                    }

                    
                </div>
            </div>
        </nav>

        <div class="container-fluid position-relative">
            <div class="row">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="col-lg-3 col-md-4 sidebar">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link text-primary active" data-toggle="collapse" href="#collapse1" aria-expanded="true">
                                    <i class="fas fa-home"></i>
                                    Dashboard
                                </a>
                                <div id="collapse1" class="collapse show">
                                    <ul class="list-unstyled">
                                        <li>
                                            @Html.ActionLink("Home", "Index", "Dashboard", new { }, new { @class = "nav-link" })
                                        </li>
                                        <li>
                                            @Html.ActionLink("My Rota", "MyRota", "ShiftSchedule", new { }, new { @class = "nav-link" })
                                        </li>
                                        <li><a class="nav-link" href="#">Stats</a></li>
                                    </ul>
                                </div>
                                
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-primary" data-toggle="collapse" href="#collapse2" aria-expanded="false">
                                    <i class="fas fa-chart-bar"></i>
                                    Care Management
                                </a>
                                <div id="collapse2" class="collapse">
                                    <ul class="list-unstyled">
                                        <li>
                                            @Html.ActionLink("Care Schedule", "Index", "Shift", new { }, new { @class = "nav-link" })
                                        </li>
                                        <li><a class="nav-link" href="#">Expenses</a></li>
                                    </ul>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-primary" data-toggle="collapse" href="#collapse3" aria-expanded="false">
                                    <i class="fas fa-users"></i>
                                    Users
                                </a>
                                <div id="collapse3" class="collapse">
                                    <ul class="list-unstyled">
                                        <li>
                                            @Html.ActionLink("All Users","Index","joinUR", new {}, new {@class= "nav-link" })
                                        </li>
                                        <li><a class="nav-link" href="#">Clients</a></li>
                                    </ul>
                                </div>
                            </li>
                        </ul>
                    </div>

                }
                @*  Inner Dashboard*@
                <div class="col-lg-9 col-md-8 bg-white">
                    <div class="container mt-4">
                        <div class="row">
                            @RenderBody()
                        </div>
                    </div>
                </div>
                @* End of Inner *@
            </div>
        </div>

        <!-- Footer Start -->
        <div class="container-fluid text-white mt-0 pt-4 fadeIn text-center d-flex justify-content-center" style="background-color: #28a745;" #28a745; data-wow-delay="0.1s">
            <div>
                <p>&copy; @DateTime.Now.Year Global Adroit Technologies&reg; UK</p>
            </div>
            <br />

        </div>
        <!-- Footer End -->
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-secondary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>

    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    @*<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>*@
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
